{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",

    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],

    "module": "ESNext",
    "moduleResolution": "Bundler",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "noEmit": true
  },
  "include": ["src"]
}